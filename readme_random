#!/bin/bash

# Function to check for README.md and create it if it doesn't exist
check_and_create_readme() {
    for dir in "$1"/*; do
        if [ -d "$dir" ]; then
            # Check if README.md exists
            if [ ! -f "$dir/README.md" ]; then
                # Create README.md with the folder name as content
                echo "Creating README.md in $dir"
                echo "$(basename "$dir")" > "$dir/README.md"
            fi
            # Recursively check subdirectories
            check_and_create_readme "$dir"
        fi
    done
}

# Start checking from the current directory or specify a path
start_dir="${1:-.}"
check_and_create_readme "$start_dir"
